<div class='row' style='width:65%; margin:auto;'>

  <div class='row' style='margin-bottom:15px;'>
    <img class='col-lg-12' src='http://f.cl.ly/items/391R3u2z0j2Q2w0h1i3M/OTR%20Header%20-%20New.jpg'>
    <p style='margin-top:5px; margin-right:14px; font-size:.9em; color:grey;' class='pull-right'>On the Radar - September 7 2013</p>
  </div>

  <div class='row' style='margin-bottom:20px;'>
    <% for(var i=0; i<stories.length; i++) {%>
      <% if(stories[i].sort_index == 0) { %>
        <div class='col-lg-4'>
          <% if(stories[i].images[0]){ %>
            <img style='width:100%;' src='<%= stories[i].images[0].url %>'>
          <% } %>
        </div>
        <div class='col-lg-8'>
          <h4 style='margin-top:0px;'><a href='#'><%= stories[i].title %></a></h4>
          <p style='font-size:1.5em; color:#4d4d4d'><%= stories[i].teaser %></p>
          <p style='margin-top:40px;' class='pull-right'><strong><a href='#'>Read it Now</a></strong></p>
        </div>
      <% } %>
    <% } %>
  </div>

  <div class='row'>
    <% for(var i=0; i<stories.length; i++) {%>
      <% if(stories[i].sort_index > 0 && stories[i].sort_index < 4) { %>
        <div class='col-lg-4'>
          <h6 style='background-color:#EDEDED; padding:10px'><%= stories[i].title %></h6>
          <% if(stories[i].images[0]){ %>
            <img style='margin:auto; display:block; width:100%;' src='<%= stories[i].images[0].url %>'>
          <% } %>
        </div>
      <% } %>
    <% } %>
  </div>

  <div class='row'>
    <div class='col-lg-6'>
      <ul style='list-style-type:none; padding:0; line-height:30px;'>
        <% for(var i=0; i<stories.length; i++) {%>
          <% if(stories[i].sort_index > 3 && stories[i].sort_index%2 == 0) { %>
            <li><a href='#'><%= stories[i].title %></a></li>
          <% } %>
        <% } %>
      </ul>
      <ul style='list-style-type:none; padding:0; line-height:30px;'>
        <% for(var i=0; i<stories.length; i++) {%>
          <% if(stories[i].sort_index > 3 && stories[i].sort_index%2 == 1) { %>
            <li><a href='#'><%= stories[i].title %></a></li>
          <% } %>
        <% } %>
      </ul>
    </div>
  </div>

</div>