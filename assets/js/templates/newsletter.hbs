<div id='nav-container'></div>

<div class='newsletter-attrs'>
  <div class='row'>
    <div class='form-group col-lg-12 col-md-12 col-sm-12'>
      <input type='text' class='form-control input-lg title' value='{{title}}' placeholder='Newsletter Title' />
    </div>
  </div>
  <div class='row'>
    <div class='form-group col-lg-12 col-md-12 col-sm-12'>
      <input type='text' class='form-control tags' value='{{tags}}' placeholder='Tags' />
      <span class='help-block'>Seperate tags with a comma (ex. News, Community, Sports...)</span>
    </div>
  </div>
</div>

<hr />

<div id='stories'></div>

<div class='add-story-wrapper'>
  <a class='btn btn-success pull-right' id='add-story' href='#'>Add Story</a>
</div>

