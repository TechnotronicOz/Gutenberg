<div class='modal-dialog'>
  <div class='modal-content'>


    <div class='modal-header'>
      <button type='button' class='close' data-dismiss='modal'>Ã—</button>
      <h4 class='modal-title'>Create a New Publication</h4>
    </div>


    <div class='modal-body'>
      <div class='row'>
        <div class='col-lg-10 col-md-10 col-lg-offset-1 col-md-offset-1'>
          <form class='form-horizontal'>
            <div class='form-group'>
              <input type='text' class='form-control' id='title' value="{{title}}" placeholder='Publication Title' />
            </div>
            <div class='form-group'>
              <textarea rows='20' id='channels' class='form-control' placeholder="Channel Config (See Project ReadMe for more Details)"></textarea>
            </div>
          </div>
        </form>
      </div>
    </div>


    <div class='modal-footer'>
      {{#if id}}
        <button type='button' class='btn btn-danger destroy' data-dismiss='modal'>Delete Publication</button>
        <button type='button' class='btn btn-success save' data-dismiss='modal'>Save Publication Changes</button>
      {{else}}
        <button type='button' class='btn btn-danger cancel' data-dismiss='modal'>Cancel, don't create a new Publication</button>
        <button type='button' class='btn btn-success create' data-dismiss='modal'>Create Publication</button>
      {{/if}}
    </div>

  </div>
</div>